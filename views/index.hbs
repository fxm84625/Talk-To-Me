<div id="main-container">
  <div class="mask">
  </div>
      <div class="pin-bottom">
        <div id="msg-container" class="panel-body">
            <div class="bot-msg">Hi! I'm here for you to vent.</div>
            <div class="bot-msg">You can tell me anything!</div>
            <div class="bot-msg">I may get some things wrong, but I will always be listening.</div>
            <div class="bot-msg">You can switch to the talking mode, or just enable my Voice!</div>
        {{#if msgArray}}
        {{#each msgArray}}
            {{#if msgArray.bot}}
            <div class="bot-msg">{{this.text}}</div>
            {{else}}
            <div class="user-msg"><p class="right">{{this.text}}</p></div>
            {{/if}}
        {{/each}}
        {{/if}}
        </div>
        <div class="typing">
            <form autocomplete="off">
                <input id="msg-field" type="text" name="msg" autocomplete="off" />
                <span>
                    <button id="msg-submit" type="submit"><span class="glyphicon glyphicon-arrow-up"></span></button>
                </span>
            </form>
        </div>
      </div>
</div>

<!-- buttons -->
<div class="options">
    <button id="mode"><span class="fa fa-microphone icon" id="voice-toggle"></span></button>
    <button id="vol"><span class="glyphicon glyphicon-volume-up icon" id="volume-toggle"></span></button>
</div>

<!-- visuals -->
<div id="visuals">
  <video style="display: none" id="video" width="100" height="100" preload="auto" playsinline autoplay></video>
  <div id="particles-js"/>
<div>
<!-- info -->
<a class="text" id="info">
<i>Talk To Me</i>
</a>
<div id="myModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <p class="text">Some text in the Modal..</p>
  </div>
</div>
